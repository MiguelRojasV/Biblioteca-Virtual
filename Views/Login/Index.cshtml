@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Biblioteca Virtual</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            height: 100vh;
            display: flex;
            align-items: center;
        }

        .login-form {
            max-width: 400px;
            margin: auto;
            padding: 15px;
            border: 1px solid #ddd;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        .alert {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-form">
            <h1 class="h3 mb-3 fw-normal text-center">Login</h1>
            <h5 class="text-center">Biblioteca Virtual</h5>
            <form asp-action="Login" asp-controller="Login" method="post">
                <div class="mb-3">
                    <label for="correo">Correo Electrónico</label>
                    <input type="email" id="correo" name="correo" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="contrasena">Contraseña</label>
                    <input type="password" id="contrasena" name="contrasena" class="form-control" required>
                </div>

                <button class="w-100 btn btn-lg btn-primary" type="submit">Ingresar al Sistema</button>

                @if (TempData["LoginError"] != null)
                {
                    <div class="alert alert-danger mt-3">@TempData["LoginError"]</div>
                }
            </form>

            <a asp-controller="Historiales" asp-action="Index" class="w-100 btn btn-outline-dark mt-3">Continuar Sin Registrar</a>
            <a asp-controller="Usuarios" asp-action="Create" class="w-100 btn btn-outline-dark mt-3">Crear Cuenta</a>

            <p class="mt-3 mb-3 text-muted">&copy; 2023</p>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>