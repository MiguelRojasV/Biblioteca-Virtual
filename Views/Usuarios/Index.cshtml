@using Biblioteca_Virtual.Models.ViewModels
@model UsuarioLibroViewModel
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">TU INFORMACION</h2>
        <hr />
    </div>
    @*< div asp-validation-summary="All"></div> *@
    <div class="mb-3">
        <label asp-for="@Model.usuario.Id"></label>
        <input asp-for="@Model.usuario.Id" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.usuario.Nombre_Completo"></label>
        <input asp-for="@Model.usuario.Nombre_Completo" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.usuario.Email"></label>
        <input asp-for="@Model.usuario.Email" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.usuario.Rol"></label>
        <input asp-for="@Model.usuario.Rol" disabled class="form-control" />
    </div>
    <div class="row">
        <div class="col">
            <a type="button" class="btn btn-primary" asp-controller="Usuarios" asp-action="Edit" asp-route-Id="@Model.usuario.Id">Editar Perfil</a>
        </div>
        <div class="col">
            <a type="button" class="btn btn-danger" asp-controller="Usuarios" asp-action="Delete" asp-route-Id="@Model.usuario.Id">Borrar Perfil</a>
        </div>
    </div>
</div>
<h3>TUS LIBROS PUBLICADOS</h3>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                PORTADA
            </th>
            <th>
                TITULO
            </th>
            <th>
                AUTOR
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.libros)
        {
            <tr>
                <td width="40%">
                    <img src="@Url.Content(obj.Foto)" width="70" height="100" />
                </td>
                <td width="30%">
                    @obj.Titulo
                </td>
                <td width="30%">
                    @obj.Autor
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Libro" asp-action="Ver" asp-route-Codigo="@obj.Codigo"
                           class="btn btn-primary mx-2">Ver</a>
                        <a asp-controller="Libro" asp-action="Delete" asp-route-Codigo="@obj.Codigo"
                           class="btn btn-primary mx-2">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
