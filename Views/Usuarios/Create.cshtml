@model Biblioteca_Virtual.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<h1 class="display-4">CREA TU CUENTA</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <dl class="row">
                <div class="mb-3">
                    <label asp-for="Nombre_Completo"></label>
                    <input asp-for="Nombre_Completo" class="form-control" />
                    <span asp-validation-for="Nombre_Completo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </dl>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Crear Cuenta</button>
            </div>
        </form>
    </div>
</div>

