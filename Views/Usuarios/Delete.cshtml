@model Usuario
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">BORRAR PERFIL</h2>
            <hr />
        </div>
        @*< div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" disabled class="form-control" />          
        </div>
        <div class="mb-3">
            <label asp-for="Nombre_Completo"></label>
            <input asp-for="Nombre_Completo" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Borrar</button>
        <a asp-controller="Usuarios" asp-action="Index" asp-route-Id="@Model.Id" class="btn btn-secondary" style="width:150px">
            Volver Al Perfil
        </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
