@using Biblioteca_Virtual.Models.ViewModels
@model LibroDetalleViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>@Model.libro.Titulo</h1>
<img src="@Url.Content(Model.libro.Foto)" width="200" height="300" />
@if (ViewBag.QRCodeImage != null)
{
    <img src="@ViewBag.QRCodeImage" style="height:200px; width:200px" />
}
<div class="detalles">
    <h3>Detalles</h3>
    <p>Autor: @Model.libro.Autor</p>
    <p>Editorial: @Model.libro.Editorial</p>
</div>

<div class="descripcion">
    <h3>Descripcion</h3>
    <p>@Model.libro.Descripcion</p>
</div>
<div class="comentarios">
    <h2>Comentarios</h2>
    <div class="col-6 text-end">
        <a asp-controller="Libro" asp-action="CrearComentario" asp-route-Codigo="@Model.libro.Codigo" class="btn btn-primary">
            PUBLICAR COMENTARIO
        </a>
    </div>
    @if (Model.comentarios.Any())
    {
        @foreach (var comentario in Model.comentarios)
        {
            <div class="comment">
                <div class="comment-box">
                    <p><strong>Fecha: @comentario.Fecha.ToString("MMMM dd, yyyy")</strong></p>
                    <p><strong>Nombre: @comentario.Nombre</strong></p>
                    <p>@comentario.Descripcion</p>
                </div>
            </div>
        }
    }
    else
    {
        <p>No hay comentarios disponibles.</p>
    }
</div>
